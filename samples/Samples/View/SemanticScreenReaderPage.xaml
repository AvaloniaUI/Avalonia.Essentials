<views:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:views="clr-namespace:Samples.View"
                x:Class="Samples.View.SemanticScreenReaderPage"
                Title="Semantic Screen Reader">
    <StackLayout>
        <Label
            Text="We hope the SemanticScreenReader APIs will further enable you to improve the accessibility of your apps"
            TextColor="RoyalBlue"
            FontSize="20"
            HorizontalTextAlignment="Center"
            Margin="0,50,0,0"/>
        <Label
            Text="Turn on your screen reader and listen for what is read aloud."
            TextColor="RoyalBlue"
            FontAttributes="Bold"
            FontSize="16"
            Margin="0,10"/>
        <Button
            Text="Activate to hear announcement text"
            HorizontalOptions="Center"
            Clicked="Announce_Clicked"/>
    </StackLayout>

</views:BasePage>