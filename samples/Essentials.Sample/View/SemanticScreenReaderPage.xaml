<views:BasePage xmlns="https://github.com/avaloniaui"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:views="clr-namespace:Samples.View"
                x:Class="Samples.View.SemanticScreenReaderPage"
                Title="Semantic Screen Reader">

    <Grid RowDefinitions="Auto,*">
        <TextBlock Text="Read out the semanic contents of a screen." FontWeight="Bold" Margin="12" />

        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="12,0,12,12" Spacing="6">
                <TextBlock Text="We hope the SemanticScreenReader APIs will further enable you to improve the accessibility of your apps"
                       Foreground="RoyalBlue" FontSize="20"
                       TextAlignment="Center" Margin="0,50,0,0"/>
                <TextBlock Text="Turn on your screen reader and listen for what is read aloud."
                       Foreground="RoyalBlue" FontWeight="Bold" FontSize="16"
                       Margin="0,10"/>
                <Button Content="Activate to hear announcement text"
                        HorizontalAlignment="Center"
                        Click="Announce_Clicked"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>

</views:BasePage>